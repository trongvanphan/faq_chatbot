# OpenAI API Configuration (Required)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://aiportalapi.stu-platform.live/jpe
MODEL_NAME=GPT-4o-mini
MAX_TOKENS=200
TEMPERATURE=0.5

# Embedding Model Configuration (for vector search)
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_KEY=your_embedding_api_key_here
EMBEDDING_BASE_URL=https://aiportalapi.stu-platform.live/jpe

# Retry Configuration
RETRY_ATTEMPTS=3
RETRY_WAIT_MIN=1
RETRY_WAIT_MAX=10

# ChromaDB Configuration (optional)
CHROMA_DB_PATH=./chroma_db

# LangChain Configuration (optional)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your_langsmith_api_key_here

# Azure OpenAI Configuration (for IT Helpdesk Bot)
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_API_VERSION=2024-07-01-preview
AZURE_DEPLOYMENT_CHAT=gpt-4o-mini
AZURE_DEPLOYMENT_EMBEDDING=text-embedding-3-large
